{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "coverage": "turbo run coverage",
    "cs": "changeset",
    "depcheck": "turbo run depcheck",
    "lint": "cross-env TIMING=1 eslint --ext=ts,tsx,js,yaml,yml .",
    "nl": "pnpm --filter=./packages/node-library",
    "nuke:root": "rimraf node_modules",
    "nuke": "turbo run nuke && pnpm nuke:root",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepare": "husky install",
    "release": "changeset publish",
    "size": "turbo run size",
    "test": "turbo run test",
    "verify:repos": "turbo run lint build coverage depcheck size",
    "verify": "run-p lint verify:repos",
    "version": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-harmony": "^7.1.2",
    "eslint-plugin-yml": "~1.18.0",
    "husky": "^9.0.0",
    "npm-run-all2": "^8.0.0",
    "pinst": "^3.0.0",
    "turbo": "2.5.4",
    "typescript": "^5.0.4"
  },
  "packageManager": "pnpm@10.13.0"
}